<%- include('./partials/header.ejs') %>

<main class="main">
  <div class="form-container">
    <h1>Create a Blogy</h1>
    <form action="/submit" method="POST">
      <label for="content">Type Here</label>
      <textarea id="content" name="text" rows="6" required></textarea>
      <button type="submit">Submit</button>
    </form>
  </div>
<div class="container">
    <% if (cont.length > 0) { %>
        <h2>Your Blogy</h2>
        <% cont.forEach((post, index) => { %>
          <div class="post m-2">
            <p class="par"><strong>Post <%= index + 1 %>:</strong> <%= post %></p>
            <a class="p-5"  href="/edit/<%= index %>">Edit</a> 
            <form action="/delete" method="POST" style="display:inline;">
              <input type="hidden" name="index" value="<%= index %>">
              <button type="submit">Delete</button>
            </form>
          </div>
        <% }) %>
      <% } else { %>
        <p class="m-3">You don't have any Blogys yet</p>
      <% } %>
</div>
</main>

<%- include('./partials/footer.ejs') %>
